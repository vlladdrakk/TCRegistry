<h<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>TCRegistry</title>

    <!-- Bootstrap Core CSS -->
    <%= stylesheet_link_tag "bootstrap.min.css" %> 
      <!-- jQuery -->
    <%= javascript_include_tag "jquery.js" %>
    <%= javascript_include_tag "bootstrap.min.js" %>
    <%= javascript_include_tag "welcome.js" %>


</head>

<body>
    <!-- Page Content -->
    <div class="container">

        <div class="row">

            <div class="col-md-3">
                <p class="lead">Categories</p>
                <div class="list-group">
                	<% @categories.each do |category| %>
                    	<a id="<%= category.name %>" onClick="clickedCategory(this)" class="list-group-item text-center"><%= category.name %></a>
                    <% end %>
                </div>
            </div>

            <div class="col-md-9">
                <div class="row">

                <% @items.each do |item| %>
	                    <div class="col-sm-4 col-lg-4 col-md-4">
	                        <div class="thumbnail">
	                            <%= image_tag(item.picture)%>
	                            <div class="caption">
	                                <h4 class="pull-right">Quantity: <%= item.needed - item.pledged %></h4>
	                                <h4><a href="#"><%= item.name %></a>
	                                </h4>
	                                <p><%= item.description %></p>
	                            </div>

	                        </div>
	                    </div>
	            	<% end %>

                </div>

            </div>

        </div>

    </div>
    <!-- /.container -->

    <div class="container">

        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                </div>
            </div>
        </footer>

    </div>
    <!-- /.container -->

  
</body>

</html>
