<h<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>TCRegistry</title>

    <!-- Bootstrap Core CSS -->
    <%= stylesheet_link_tag "bootstrap.min.css" %> 
      <!-- jQuery -->
    <%= javascript_include_tag "jquery.js" %>
    <%= javascript_include_tag "bootstrap.min.js" %>
    <%= javascript_include_tag "welcome.js" %>


</head>

<body>
    <!-- Page Content -->
    <div class="container">

        <div class="row">

            <div class="col-xs-3">
              <div class="row">
                <span class="lead text-center col-xs-12">Categories</span>
              </div>
              <div class="row">
                <div id="categoryList" class="list-group">
                	<% @categories.each do |category| %>
                    <button id="<%= category.id %>" onclick="clickedCategory(this)" class="btn text-center col-xs-12 category-name"><%= category.name %></button>
                  <% end %>
                </div>
              </div>
            </div>

            <div class="col-md-9">
              <div class="row">

                <% @items.each do |item|
                  if item.needed != 0 %>
                    <div id="item-<%= item.id %>" class="col-sm-4 col-lg-4 col-md-4">
                      <div class="thumbnail">
                        <%= image_tag(item.picture)%>
                        <div class="caption">
                          <h4 class="pull-right">Needed: <span id="needed-<%= item.id %>"><%= item.needed - item.pledged %></span></h4>
                          <h4><a href="#"><%= item.name %></a>
                          </h4>
                          <p><%= item.description %></p>
                          <div id="itemControl" class="row text-center">
                            <span id="<%= item.id %>" onclick="claimItem(this)" class="close claim">I&apos;ll get this!</span>
                          </div>
                        </div>
                      </div>
                    </div>
	            	  <% end
                end %>
              </div>
            </div>
        </div>
    </div>
    <!-- /.container -->

    <div class="container">

        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                  <a href="/manage">Manage</a>
                </div>
            </div>
        </footer>

    </div>
    <!-- /.container -->

  
</body>

</html>
